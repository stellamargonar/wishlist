<div class="row">
  <div class="col-xs-12">
    <div class="form-horizontal">
      <fieldset>
        <legend>Add Item</legend>
        <%= form_for([@wishlist, @wishlist.items.build]) do |f| %>
          <div class="col-md-12 form-group label-placeholder">
            <%= f.label :name , class: "control-label" %>
            <%= f.text_field :name , class: "form-control" %>
          </div>
          <div class="col-md-12 form-group label-placeholder">
            <%= f.label :url , class: "control-label" %>
            <%= f.text_field :url , class: "form-control" %>
          </div>
          <div class="col-md-5 form-group label-placeholder">
            <%= f.label :price , class: "control-label" %>
            <%= f.text_field :price , class: "form-control" %>
          </div>
          <div class="col-md-7 form-group label-placeholder">
            <%= f.label :image_url , class: "control-label" %>
            <%= f.text_field :image_url , class: "form-control" %>
          </div>
          
          <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
              <button type="button" class="btn btn-default">Cancel</button>
              <%= f.submit(class: "btn btn-raised btn-primary") %>
            </div>
          </div>
        <% end %>
      </fieldset>
    </div>
  </div>
</div>