<%= form_for @wishlist do |f| %>
    <!-- Validation errors -->
    <% if @wishlist.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@wishlist.errors.count, "error") %>
                prohibited this wishlist from being saved:
            </h2>
            <ul>
                <% @wishlist.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="form-group label-placeholder">
        <%= f.label :title , class: "control-label" %>
        <%= f.text_field :title , class: "form-control" %>
    </div>
    <%= f.submit(class: "btn btn-raised btn-primary")  %>
    
<% end %>